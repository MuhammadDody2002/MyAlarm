<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One Time Alarmku"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/ib_once_date"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_date_range_red_24"
        style="@style/Widget.AppCompat.ImageButton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_once_time"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_access_time_red_24"
            style="@style/Widget.AppCompat.ImageButton"/>

        <TextView
            android:id="@+id/tv_once_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <EditText
        android:id="@+id/et_once_message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/set_once_alarm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set One Time Alarm"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One Time Alarm"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <ImageButton
        android:id="@+id/ib_once_date3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_date_range_red_24"
        style="@style/Widget.AppCompat.ImageButton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_once_time2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_access_time_red_24"
            style="@style/Widget.AppCompat.ImageButton"/>

        <TextView
            android:id="@+id/tv_once_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"

            />

    </LinearLayout>

    <EditText
        android:id="@+id/et_once_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/set_once_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set One Time Alarm"
        android:layout_marginBottom="16dp"/>




</LinearLayout>
